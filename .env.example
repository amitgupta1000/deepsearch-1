# Example Environment Configuration for INTELLISEARCH Cloud Run
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Get from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Get from Serper: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment mode
ENVIRONMENT=production
PRODUCTION_MODE=true

# Google Cloud Project
GCP_PROJECT_ID=gen-lang-client-0665888431
GCP_REGION=us-central1

# =============================================================================
# APPLICATION SETTINGS (Cloud Run Optimized)
# =============================================================================
# LLM Configuration
LLM_TEMPERATURE=0.1
MAX_TOKENS=30000
GOOGLE_MODEL=gemini-2.0-flash

# Search Configuration
MAX_SEARCH_QUERIES=8
MAX_SEARCH_RESULTS=8
MAX_CONCURRENT_SCRAPES=4

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=3600
USE_ENHANCED_EMBEDDINGS=true
USE_HYBRID_RETRIEVAL=true
USE_CROSS_ENCODER_RERANKING=false

# =============================================================================
# DEVELOPMENT SETTINGS (for local testing)
# =============================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO
VERBOSE=false

# =============================================================================
# CLOUD RUN SPECIFIC SETTINGS
# =============================================================================
PORT=8080
PYTHONPATH=/app/src
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SSL_VERIFY=true

# =============================================================================
# REPORT CONFIGURATION
# =============================================================================
REPORT_FORMAT=md
DEFAULT_REPORT_TYPE=unified
REPORT_FILENAME_TEXT=IntelliSearchReport.txt
REPORT_FILENAME_PDF=IntelliSearchReport.pdf

# =============================================================================
# NOTES
# =============================================================================
# 1. For Cloud Run deployment, API keys will be stored in Google Secret Manager
# 2. Copy this file to .env for local development
# 3. Never commit actual API keys to version control
# 4. Update the deployment scripts with your actual GCP project ID